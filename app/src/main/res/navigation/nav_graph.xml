<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.quannv.searchapplication.ui.main.MainFragment"
        android:label="@string/header_main_fragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/to_detail"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.quannv.searchapplication.ui.detail.ImageDetailFragment"
        android:label="@string/header_detail_fragment"
        tools:layout="@layout/fragment_detail" />

</navigation>